<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    tools:context="com.rere.fish.gcv.PreviewActivity">


    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:cropBackgroundColor="@color/alphaGray80"
        app:cropBorderCornerColor="@android:color/darker_gray"
        app:cropBorderCornerOffset="0dp"
        app:cropBorderCornerThickness="5dp"
        app:cropBorderLineThickness="1dp"
        app:cropGuidelines="on"
        app:cropInitialCropWindowPaddingRatio="0"
        app:cropSnapRadius="0dp" />

    <include layout="@layout/bottom_action_preview_fragment"/>

    <android.support.design.widget.BottomNavigationView
        android:visibility="gone"
        android:id="@+id/btm_navigation_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemBackground="@color/transparent"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/navigation_preview_bottom" />

    <!--app:cropBorderLineColor="@android:color/holo_green_light"-->
    <!--app:cropGuidelinesColor="@android:color/holo_red_dark"-->


</android.support.design.widget.CoordinatorLayout>
