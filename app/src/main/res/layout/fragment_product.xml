<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerViewProduct"
    android:layout_width="match_parent"
    android:layout_height="240.8dp"
    android:layout_marginBottom="0.5dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginTop="0.5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="18dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumb_product"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/text_id_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumb_product"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_content_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_id_product"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

